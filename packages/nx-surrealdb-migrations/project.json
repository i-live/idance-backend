{
  "name": "nx-surrealdb-migrations",
  "sourceRoot": "packages/nx-surrealdb-migrations/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/nx-surrealdb-migrations",
        "main": "packages/nx-surrealdb-migrations/src/index.ts",
        "tsConfig": "packages/nx-surrealdb-migrations/tsconfig.lib.json",
        "assets": [
          "src/*.json",
          "*.md",
          "src/executors/*/schema.json",
          "src/generators/*/schema.json",
          "src/generators.json",
          "src/executors.json",
          "src/generators/migration/files/*"
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/nx-surrealdb-migrations/jest.config.ts"
      }
    }
  }
}