{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "properties": {
    "url": {
      "type": "string",
      "description": "SurrealDB instance URL"
    },
    "user": {
      "type": "string",
      "description": "User for instance operations"
    },
    "pass": {
      "type": "string",
      "description": "User password"
    },
    "namespace": {
      "type": "string",
      "description": "Namespace for operations"
    },
    "database": {
      "type": "string",
      "description": "Database for operations"
    },
    "down": {
      "type": "boolean",
      "description": "Run down migrations instead of up",
      "default": false
    },
    "envFile": {
      "type": "string",
      "description": "Path to environment file",
      "default": ".env"
    },
    "useTransactions": {
      "type": "boolean",
      "description": "Wrap DML operations in transactions",
      "default": true
    },
    "force": {
      "type": "boolean",
      "description": "force running migration",
      "default": false
    },
    "path": {
      "type": ["string", "number"],
      "description": "Path to migrations subdirectory (e.g., '002_auth', '2', 'auth')"
    },
    "file": {
      "type": ["string", "number"],
      "description": "Specific migration file to run (e.g., '0003_core_users', '3', 'core_users')"
    },
    "initPath": {
      "type": "string",
      "description": "Base path for migrations",
      "default": "database"
    }
  },
  "required": ["url", "user", "pass"]
}