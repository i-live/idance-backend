{
  "$schema": "http://json-schema.org/schema",
  "version": 2,
  "title": "Application Migration Executor",
  "description": "Migrate database for a specific application using module dependencies",
  "type": "object",
  "properties": {
    "url": {
      "type": "string",
      "description": "SurrealDB connection URL"
    },
    "user": {
      "type": "string", 
      "description": "Database user"
    },
    "pass": {
      "type": "string",
      "description": "Database password"
    },
    "namespace": {
      "type": "string",
      "description": "Database namespace (overrides app config)"
    },
    "database": {
      "type": "string",
      "description": "Database name (overrides app config)"
    },
    "app": {
      "type": "string",
      "description": "Application name (must match folder in database/applications/)"
    },
    "environment": {
      "type": "string",
      "description": "Target environment (dev/staging/prod)"
    },
    "envFile": {
      "type": "string",
      "description": "Path to .env file"
    },
    "force": {
      "type": "boolean",
      "description": "Force apply migrations ignoring state conflicts",
      "default": false
    },
    "schemaPath": {
      "type": "string",
      "description": "Path to custom schema file"
    }
  },
  "required": ["app", "environment"]
}