{
  "name": "database",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "database",
  "targets": {
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./scripts/install-migrations.sh"
      }
    },
    "migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "surrealdb-migrations apply"
      }
    },
    "migrate-down": {
      "executor": "nx:run-commands",
      "options": {
        "command": "surrealdb-migrations apply --down"
      }
    },
    "migrate-to": {
      "executor": "nx:run-commands",
      "options": {
        "command": "surrealdb-migrations apply --down {args.migration}"
      }
    },
    "create-migration": {
      "executor": "nx:run-commands",
      "options": {
        "command": "surrealdb-migrations create {args.name}"
      }
    },
    "create-migration-with-down": {
      "executor": "nx:run-commands",
      "options": {
        "command": "surrealdb-migrations create {args.name} --down"
      }
    }
  },
  "tags": ["database", "infrastructure"]
}