{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "properties": {
    "url": {
      "type": "string",
      "description": "SurrealDB instance URL"
    },
    "user": {
      "type": "string",
      "description": "User for instance operations"
    },
    "pass": {
      "type": "string",
      "description": "User password"
    },
    "namespace": {
      "type": "string",
      "description": "Namespace for operations"
    },
    "database": {
      "type": "string",
      "description": "Database for operations"
    },
    "down": {
      "type": "boolean",
      "description": "Run down migrations instead of up",
      "default": false
    },
    "envFile": {
      "type": "string",
      "description": "Path to environment file",
      "default": ".env"
    },
    "useTransactions": {
      "type": "boolean",
      "description": "Wrap DML operations in transactions",
      "default": true
    },
    "path": {
      "type": "string",
      "description": "Path to migrations files (e.g., 'init','schema', 'seed', 'migrations')",  
      "default": "init"
    }
  },
  "required": ["url", "user", "pass"]
}