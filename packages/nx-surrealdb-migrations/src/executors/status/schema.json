{
  "$schema": "http://json-schema.org/schema",
  "title": "Migrate Executor",
  "description": "Run pending SurrealDB migrations",
  "type": "object",
  "properties": {
    "url": { "type": "string", "description": "SurrealDB URL" },
    "namespace": { "type": "string", "description": "SurrealDB namespace" },
    "database": { "type": "string", "description": "SurrealDB database" },
    "username": { "type": "string", "description": "SurrealDB username" },
    "password": { "type": "string", "description": "SurrealDB password" },
    "migrationsDir": { "type": "string", "description": "Path to migrations", "default": "migrations" }
  },
  "required": ["url", "namespace", "database", "username", "password"]
}