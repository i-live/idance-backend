{
  "name": "nx-surrealdb-migrations",
  "sourceRoot": "packages/nx-surrealdb-migrations/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "cache": false,
      "options": {
        "outputPath": "dist/packages/nx-surrealdb-migrations",
        "main": "packages/nx-surrealdb-migrations/src/index.ts",
        "tsConfig": "packages/nx-surrealdb-migrations/tsconfig.lib.json",
        "assets": [
          {
            "input": "packages/nx-surrealdb-migrations/src/generators/migration/files",
            "glob": "**/*",
            "output": "src/generators/migration/files"
          },
          {
            "input": "packages/nx-surrealdb-migrations",
            "glob": "{package.json,generators.json,executors.json,README.md,LICENSE.md}",
            "output": "./"
          },
          {
            "input": "packages/nx-surrealdb-migrations/src",
            "glob": "**/*/schema.json",
            "output": "src"
          },
          {
            "input": "packages/nx-surrealdb-migrations/src/schema",
            "glob": "**/*",
            "output": "src/schema"
          }
        ],
        "updateBuildableProjectDepsInPackageJson": true,
        "buildableProjectDepsInPackageJsonType": "dependencies"
      },
      "configurations": {
        "production": {}
      }
    },
    "copy-schema": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mkdir -p dist/packages/nx-surrealdb-migrations/src/schema && cp packages/nx-surrealdb-migrations/src/schema/system_migrations.surql dist/packages/nx-surrealdb-migrations/src/schema/"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "cache": false,
      "options": {
        "jestConfig": "packages/nx-surrealdb-migrations/jest.config.ts"
      }
    }
  }
}